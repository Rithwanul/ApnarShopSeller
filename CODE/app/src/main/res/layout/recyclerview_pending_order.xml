<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/rv_pending_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:weightSum="5">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/rv_pending_order_profileImage"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:civ_border_color="@color/app_black1"
                    app:civ_border_width="0.5dp"
                    android:contentDescription="@string/buyer_image" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/rv_pending_order_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name: Rahim Rahman"
                        android:textColor="@color/app_black1"
                        android:textSize="@dimen/font_xl"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/rv_pending_order_mobile_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="0172736353"
                        android:textSize="@dimen/font_s" />

                    <TextView
                        android:id="@+id/rv_pending_order_order_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Order #4488446"
                        android:textSize="@dimen/font_s" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/rv_pending_order_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="@string/detail"
                        android:padding="3dp"
                        android:textColor="@color/app_black1"
                        android:textSize="@dimen/font_xl"
                        android:textStyle="bold"
                        android:background="?selectableItemBackgroundBorderless"
                        app:drawableRightCompat="@drawable/ic_baseline_arrow_forward_ios_24" />

                    <TextView
                        android:id="@+id/rv_pending_order_order_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:gravity="end"
                        android:text="12 August 2020 2.20 pm"
                        android:textColor="@color/app_black1"
                        android:textSize="@dimen/font_s" />

                    <TextView
                        android:id="@+id/rv_pending_order_order_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:gravity="end"
                        android:text="Order status: Placed"
                        android:textColor="#4CAF50"
                        android:textSize="@dimen/font_xl"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="75dp"
                android:layout_marginBottom="5dp"
                android:visibility="gone"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/rv_pending_order_update_order"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="5dp"
                    android:letterSpacing="0"
                    android:background="@drawable/yellow_background_capsul_shape_fill"
                    android:gravity="center"
                    android:padding="0dp"
                    android:text="Process"
                    android:textAllCaps="false"
                    android:textColor="@color/app_black1"
                    android:textSize="@dimen/font_m"
                    app:fontFamily="@font/montserrat_regular"
                    />

                <Button
                    android:id="@+id/rv_pending_order_cancel_order"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:padding="0dp"
                    app:fontFamily="@font/montserrat_regular"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    app:backgroundTint="@color/red_200"
                    android:background="@drawable/red_background_capsul_shape_fill"
                    android:text="@string/cancel"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_m"
                    />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
</layout>