<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_yellow4"
    tools:context=".Fragment.offer.OfferCreatedSuccessfully">

    <ImageView
        android:id="@+id/product_added_successfully_back_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@string/back_arrow"
        android:padding="10dp"
        android:src="@drawable/ic_back"
        app:tint="@color/app_black1" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:contentDescription="@string/success_image"
        android:src="@drawable/ic_check" />


    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text=""
        android:textColor="@color/app_yellow"
        android:textSize="@dimen/font_huge"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/app_black1"
        android:text=""
        android:textStyle="bold"
        android:textSize="@dimen/font_xxxl"/>

    <TextView
        android:id="@+id/offerPeriod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/app_black1"
        android:text=""
        android:textStyle="bold"
        android:textSize="@dimen/font_xxxl"/>
</LinearLayout>
</layout>