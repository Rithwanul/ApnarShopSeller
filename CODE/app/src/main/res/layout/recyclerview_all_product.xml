<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="4dp"
            app:cardElevation="1dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="6dp"
                android:paddingTop="4dp"
                android:paddingEnd="6dp"
                android:paddingBottom="4dp"
                android:weightSum="4">


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/recyclerView_all_product_product_image"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:contentDescription="@string/product_image"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_default_image" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/recyclerView_all_product_product_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text=""
                        android:textColor="@color/app_black1"
                        android:textSize="@dimen/font_xl" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/recyclerView_all_product_available_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text=""
                        android:textColor="@color/app_yellow3"
                        android:textSize="@dimen/font_m" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/recyclerView_all_product_product_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text=""
                            android:textColor="@color/app_yellow3"
                            android:textSize="@dimen/font_xxxl"
                            android:textStyle="bold" />
                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/new_Price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="2dp"
                            android:text="@string/_120"
                            android:visibility="gone"
                            android:textColor="@color/app_yellow3"
                            android:textSize="@dimen/font_xxl"
                            android:textStyle="bold" />
                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/recyclerView_all_product_product_unit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="2dp"
                            android:text=""
                            android:textColor="@color/app_black1"
                            android:textSize="@dimen/font_m"
                            android:textStyle="bold" />

                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/offerInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="tezt"
                        android:visibility="gone"
                        android:textColor="@color/app_black1"
                        android:textSize="@dimen/font_xl" />


                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="2"
                    android:gravity="center|center_vertical"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/recyclerView_all_product_minus_btn"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/black_background_left_capsul_shape_fill"
                        android:gravity="center"
                        android:text="@string/minus"
                        android:textColor="@color/app_white1"
                        android:textStyle="bold"
                        tools:ignore="UnusedAttribute" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/recyclerView_all_product__count"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:inputType="number"
                        android:text="@string/_0"
                        android:textColor="@color/app_black1"
                        android:textSize="@dimen/font_xl" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/recyclerView_all_product_plus"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/yellow_background_right_capsul_shape_fill"
                        android:gravity="center"
                        android:text="@string/plus"
                        android:textColor="@color/app_black1"
                        android:textStyle="bold"
                        tools:ignore="UnusedAttribute" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|center_vertical"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:background="?selectableItemBackgroundBorderless"
                        android:gravity="center_vertical"
                        android:padding="4dp"
                        android:text="@string/details"
                        android:textColor="@color/app_black1"
                        android:textSize="@dimen/font_xl"
                        android:textStyle="bold"
                        app:drawableEndCompat="@drawable/ic_baseline_arrow_forward_ios_24" />

                    <Button
                        android:id="@+id/recyclerView_all_product_update"
                        android:layout_width="80dp"
                        android:layout_height="26dp"
                        android:layout_gravity="end"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/yellow_background_capsul_shape_fill"
                        android:paddingTop="-4dp"
                        android:paddingBottom="-4dp"
                        android:text="@string/update"
                        android:textAllCaps="false"
                        android:textColor="@color/app_black1"
                        android:textSize="@dimen/font_m"
                        android:textStyle="bold" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/recyclerview_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/red_background_capsul_stoke"
                        android:paddingStart="12dp"
                        android:paddingTop="4dp"
                        android:paddingEnd="12dp"
                        android:paddingBottom="4dp"
                        android:text=""
                        android:textColor="@color/app_black1" />


                </androidx.appcompat.widget.LinearLayoutCompat>


            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.cardview.widget.CardView>


    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>